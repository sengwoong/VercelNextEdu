{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/**/*.ts", // 수정된 부분입니다.
    "**/index.tsx"
, "app/home/A/pag2e.tst", "app/home/A/scrrem.tsㅌ", "app/home/A/pag2e.tst", "app/rtcPearProvider.ts", "app/socketProvider.tsx", "app/home/A/scrrem.tst"  ],
  "exclude": [
    "node_modules",
    "sanity-studio"
  ]
}
